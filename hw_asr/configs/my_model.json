{
    "name": "my_model",
    "n_gpu": 4,
    "preprocessing": {
      "sr": 16000,
      "spectrogram": {
        "type": "MelSpectrogram",
        "args": {
        }
      },
      "log_spec": true
    },
    "augmentations": {
      "wave": [],
      "spectrogram": []
    },
    "arch": {
        "type": "DeepSpeechModel",
        "args": {
          "n_feats": 128,
          "hidden": 256,
          "num_layers": 4
        }
    },
    "data": {
      "train": {
        "batch_size": 50,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-clean-100",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          },
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-clean-360",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          },
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "train-other-500",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
      },
      "val": {
        "batch_size": 50,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "dev-clean",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
      },
      "test-other": {
        "batch_size": 50,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-other",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
      },
      "test-clean": {
        "batch_size": 50,
        "num_workers": 5,
        "datasets": [
          {
            "type": "LibrispeechDataset",
            "args": {
              "part": "test-clean",
              "max_audio_length": 20.0,
              "max_text_length": 200
            }
          }
        ]
      }
    },
    "optimizer": {
      "type": "Adam",
      "args": {
        "lr": 3e-4
      }
    },
    "loss": {
      "type": "CTCLoss",
      "args": {}
    },
    "metrics": [
        {
            "type": "BeamWERMetric",
            "args": {
              "name": "WER (beam)"
            }
          },
          {
            "type": "BeamCERMetric",
            "args": {
              "name": "CER (beam)"
            }
          }
    ],
    "lr_scheduler": {
      "type": "OneCycleLR",
      "args": {
        "steps_per_epoch": 5000,
        "epochs": 100,
        "anneal_strategy": "cos",
        "max_lr": 4e-3,
        "pct_start": 0.2
      }
    },
    "trainer": {
      "epochs": 100,
      "save_dir": "saved/",
      "save_period": 5,
      "verbosity": 2,
      "monitor": "min val_loss",
      "early_stop": 100,
      "visualize": "wandb",
      "wandb_project": "asr_project",
      "len_epoch": 5000,
      "grad_norm_clip": 10
    },
    "text_encoder": {
      "type": "CTCBeamCharTextEncoder",
      "args": {
        "vocabulary": "lm/librispeech-vocab.txt",
        "lm": "lm/lowercase_3-gram.pruned.1e-7.arpa"
      }
    }
  }